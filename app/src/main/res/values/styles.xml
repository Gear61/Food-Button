<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/app_red</item>
    </style>

    <style name="RestaurantTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/app_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="button_ripple_attributes">
        <item name="rd_rippleType">touch</item>
        <item name="rd_backgroundAnimDuration">0</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_rippleAnimDuration">@integer/shorter_anim_length</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>

    <style name="giant_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">25dp</item>
    </style>

    <style name="powered_by_yelp">
        <item name="android:src">@drawable/powered_by_yelp</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:contentDescription">@string/powered_by_yelp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="showcase_theme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/transparent_red</item>
        <item name="sv_showcaseColor">@color/white</item>
        <item name="sv_buttonText">@string/got_it</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_detailTextAppearance">@style/showcase_text</item>
    </style>

    <style name="showcase_text" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="action_icon">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="action_item">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
